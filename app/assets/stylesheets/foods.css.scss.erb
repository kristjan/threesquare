body {
  background: #F5F5F5 url(<%= asset_path("dust_bg.jpg") %>) repeat left top;
}

form {
  width: 90%;
  padding: 0 5%;

  div {
    width: 100%;
    margin: 30px 0;
  }

  input[type=text] {
    width: 95%;
    padding: 10px;
    border: none;
    outline: none;
    border-radius: 10px;

    font-size: 16px;

    box-shadow: inset 0px 1px 2px #999;
  }

  label {
    display: block;
    margin-bottom: 5px;
    color: #041B5B;
    font-size: 24px;
    text-transform: uppercase;

    &.smiley {
      display: inline-block;
      width: 30%;

      img {
        width: 100%;
        display: block;
        &.selected { display: none; }
      }

      &.selected, &:hover {
        img {
          display: none;
          &.selected { display: block; }
        }
      }

      &:hover {
        cursor: pointer;
      }

      input[type=radio] {
        display: none;
      }
    }
  }
}


.show {
  text-align: center;
}
